@using Alpha.Models
@model List<Tag>
<h5 class="card-header"><span class="fa fa-tag mr-1"> </span>Tags</h5>
<div class="card-body">
    <div id="tagList" class="row">
        @{
            var numberOfTags = Model.Count();
            var remainTags = Model.Count() - numberOfTags / 2;
            <div class="col-lg-6">
                <ul class="list-unstyled mb-0">
                    @foreach (var tag in Model.Take(numberOfTags / 2))
                    {
                        <li>
                            <a class="btn btn-sm btn-success" asp-action="Index" asp-controller="Article" asp-route-tagId="@tag.Id" asp-route-pageNumber="1" title="@tag.Description">
                                <span class="fa fa-tag mr-1"> </span>@tag.Title
                            </a>
                        </li>
                    }
                </ul>
            </div>
            <div class="col-lg-6">
                <ul class="list-unstyled mb-0">
                    @foreach (var tag in Model.Skip(numberOfTags / 2).Take(remainTags))
                    {
                        <li>
                            <a class="btn btn-sm btn-success" asp-action="Index" asp-controller="Article" asp-route-tagId="@tag.Id" asp-route-pageNumber="1" title="@tag.Description">
                                <span class="fa fa-tag mr-1"></span>@tag.Title
                            </a>
                        </li>
                    }
                </ul>
            </div>
        }
    </div>
</div>