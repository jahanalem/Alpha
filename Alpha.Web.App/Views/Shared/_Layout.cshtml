@using Alpha.Infrastructure
@using Alpha.Web.App.Resources.Constants
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Authorization


<!DOCTYPE html>
<html>

<head>
    <meta name="robots" content="noindex">
    <link rel="icon" type="image/png" sizes="32x32" href="/images/favicons/favicon-32x32.png">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="author" content="">
    <meta name="google-signin-client_id" content="56074703213-u4qak3nim2ejjvdd23euf68e724qn4a7.apps.googleusercontent.com">

    @if (!string.IsNullOrEmpty(ViewBag.TitleHtmlMetaTag))
    {
        <title>@ViewBag.TitleHtmlMetaTag.ToString()</title>
    }
    else
    {
        <title>Green Codes</title>
    }
    @if (!string.IsNullOrEmpty(ViewBag.DescriptionHtmlMetaTag))
    {
        <meta name="description" content="@ViewBag.DescriptionHtmlMetaTag.ToString()">
    }
    else
    {
        <meta name="description" content="You can find a collection of useful programming codes here.">
    }
    <!-- Bootstrap core CSS -->
    @*<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />*@
    @*<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />*@
    <link rel="stylesheet" asp-href-include="/lib/bootstrap/dist/**/*.min.css" asp-href-exclude="**/*-reboot*,**/*-grid*" />
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href='https://fonts.googleapis.com/css?family=Lato:300,400,700' rel='stylesheet' type='text/css'>

    <link href="~/lib/prism/prism.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/css/blog-post.css" rel="stylesheet" />

</head>

<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand text-success" asp-controller="Home">Green Codes</a>
            <form id="searchForm" asp-controller="Search" asp-action="Index" class="form-inline" role="search">
                <div class="input-group">
                    <input id="searchBox" type="search" class="form-control" placeholder="Search" name="search">
                    <span class="input-group-append">
                        <button id="submitSearch" class="btn btn-outline-secondary border border-left-0" type="submit">
                            <i class="fa fa-search"></i>
                        </button>
                    </span>
                </div>
            </form>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            Home
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Article" asp-action="Index" asp-area="" class="nav-link">Articles</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="AboutUs" asp-action="Index" asp-area="" class="nav-link">About</a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="ContactUs" asp-action="ContactUsForm" asp-area="" class="nav-link">Contact</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a asp-controller="Account" asp-action="Logout" class="nav-link">LogOut</a>
                        </li>
                        @if ((await AuthorizationService.AuthorizeAsync(User, PolicyTypes.SuperAdmin)).Succeeded)
                        {
                            <li class="nav-item">
                                <a asp-controller="Home" asp-action="Index" asp-area="Admin" class="nav-link">Dashboard</a>
                            </li>
                        }
                    }
                    else
                    {
                        <li class="nav-item">
                            <a asp-controller="Account" asp-action="Login" class="nav-link">Login</a>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>

    <!-- Page Content -->
    <div id="containerLoader" class="container" style="min-height:450px">

        @RenderBody()

        <!-- /.row -->

    </div>
    <!-- /.container -->
    <!-- Footer -->
    <footer class="pt-5 pb-1 bg-dark">
        <div class="container justify-content-center">
            <div class="row align-left ml-1 mb-4 justify-content-center">
                <a href="~/Policy/CookiePolicy.html">
                    <span class="text-success">Green Codes</span><span class="text-warning"> Cookie Policy</span>
                </a>
            </div>
            <div class="row align-left ml-1 justify-content-center">
                <p class="m-0 text-center text-secondary">
                    Developed by
                    <a class="text-secondary" href="/AboutUs">
                        Said Roohullah Allem
                    </a>
                </p>
            </div>

        </div>
    </footer>

    <!-- Bootstrap core JavaScript -->

    <script src="~/lib/jQuery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @*<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.1/dist/jquery.validate.min.js"></script>*@
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.9/validator.min.js" integrity="sha256-dHf/YjH1A4tewEsKUSmNnV05DDbfGN3g7NMq86xgGh8=" crossorigin="anonymous"></script>

    <script src="~/lib/prism/prism.js"></script>
    <script src="~/js/beta.js"></script>
    <script src="https://apis.google.com/js/platform.js" async defer></script>
    @RenderSection("Scripts", required: false)
</body>

</html>