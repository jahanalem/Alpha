@using Alpha.ViewModels
@model Alpha.ViewModels.ContactUsViewModel

@{
    ViewData["Title"] = "ContactUsForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <aside class="col-sm-2">
    </aside> <!-- col.// -->

    <aside class="col-sm-8">
        <div class="card  mb-2 mt-2">
            <article class="card-body">
                <h4 class="card-title mb-4 mt-1">Contact us</h4>

                <hr>
                <div class="text-danger" asp-validation-summary="All"></div>
                <form asp-controller="ContactUs" asp-action="ContactUsForm" method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <input asp-for="@Model.ContactUs.FirstName" placeholder="First name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input asp-for="@Model.ContactUs.LastName" placeholder="Last name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input asp-for="@Model.ContactUs.Email" class="form-control" placeholder="Email" type="email" required />
                    </div> <!-- form-group// -->
                    <div class="form-group">
                        <input asp-for="@Model.ContactUs.Title" placeholder="Title" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <textarea asp-for="@Model.ContactUs.Description" class="form-control" rows="5" placeholder="Comment"></textarea>
                    </div> <!-- form-group// -->

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block"> Send </button>
                            </div> <!-- form-group// -->
                        </div>
                    </div> <!-- .row// -->
                </form>
            </article>
        </div> <!-- card.// -->

    </aside> <!-- col.// -->

    <aside class="col-sm-2">
    </aside>

</div>