@model Alpha.Models.Article

@{
    ViewData["Title"] = "Show";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <!-- Title -->
            <h1 class="mt-4">@Model.Title</h1>

            <!-- Author -->
            <p class="lead">
                by
                <a href="#">User!</a>
            </p>

            <hr>

            <!-- Date/Time -->
            <p>@Model.CreatedDate</p>

            <hr>
            <div>
                <p class="lead">@Html.Raw(Model.Summary)</p>

                <div class="text-justify">
                   @Html.Raw(Model.Description)
                </div>
                <blockquote class="blockquote">
                    <p class="mb-0">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere erat a ante.</p>
                    <footer class="blockquote-footer">
                        Someone famous in
                        <cite title="Source Title">Source Title</cite>
                    </footer>
                </blockquote>

                <hr>
            </div>
            <!-- Comments Form -->
            <div class="card my-4">
                @Html.PartialAsync("_SendComment", new Alpha.ViewModels.SendCommentViewModel
                { Dsc = string.Empty, ArticleId = Model.Id, ParentId = null })
            </div>

            @await Component.InvokeAsync("CommentList", Model.Id)
            @*//comments*@


        </div>
    </div>
</div>
