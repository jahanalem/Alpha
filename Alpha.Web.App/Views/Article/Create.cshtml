@model Alpha.ViewModels.ArticleViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<h4>Article</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Article" asp-action="Insert" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Article.UserId" class="control-label"></label>
                <select asp-for="Article.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Article.Title" class="control-label"></label>
                <input asp-for="Article.Title" class="form-control" />
                <span asp-validation-for="Article.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.Summary" class="control-label"></label>
                <input asp-for="Article.Summary" class="form-control" />
                <span asp-validation-for="Article.Summary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.Description" class="control-label"></label>
                <input asp-for="Article.Description" class="form-control" />
                <span asp-validation-for="Article.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.RateCounter" class="control-label"></label>
                <input asp-for="Article.RateCounter" class="form-control" />
                <span asp-validation-for="Article.RateCounter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.LikeCounter" class="control-label"></label>
                <input asp-for="Article.LikeCounter" class="form-control" />
                <span asp-validation-for="Article.LikeCounter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Article.IsActive" /> @Html.DisplayNameFor(model => model.Article.IsActive)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Article.IsActiveNewComment" /> @Html.DisplayNameFor(model => model.Article.IsActiveNewComment)
                    </label>
                </div>
            </div>

            <div class="form-group">
                <ul>
                    @{
                        for (int i = 0; i < Model.Tags.Count(); i++)
                        {
                    <li>
                        <input type="checkbox" asp-for="@Model.Tags[i].IsActive" />
                        <label asp-for="@Model.Tags[i].IsActive">@Model.Tags[i].Title</label>
                        <input type="hidden" asp-for="@Model.Tags[i].Id" />
                        <input type="hidden" asp-for="@Model.Tags[i].Title" />
                        <input type="hidden" asp-for="@Model.Tags[i].Size" />
                        <input type="hidden" asp-for="@Model.Tags[i].Description" />
                    </li>
                        }
                    }
                </ul>
            </div>
            <div class="form-group">
                <label asp-for="Article.CreatedDate" class="control-label"></label>
                <input asp-for="Article.CreatedDate" class="form-control" />
                <span asp-validation-for="Article.CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.ModifiedDate" class="control-label"></label>
                <input asp-for="Article.ModifiedDate" class="form-control" />
                <span asp-validation-for="Article.ModifiedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
